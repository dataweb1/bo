{{ help }}


<div class="popup-container">
  <!-- Button to Open the Modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#bo_bundle_popup_modal_{{ bo.id }}">
      {{ bo.field_button_caption.raw.value }}
  </button>
</div>

<!-- The Modal -->
<div class="bo-fields-popup-modal modal fade" id="bo_bundle_popup_modal_{{ bo.id }}">
    <div class="modal-dialog modal-{{ bo.field_size.raw.value }}">
        <div class="modal-content">

            <!-- Modal Header -->
            {% if bo.field_show_header.raw.value == '1' %}
            <div class="modal-header">
                <h4 class="modal-title">{{ bo.title.raw.value }}</h4>
                <button type="button" class="close" data-dismiss="modal">Ã—</button>
            </div>
            {% endif %}
            <!-- Modal body -->
            <div class="modal-body">

                {{ collection }}

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

{{ attach_library('bo/bo_bundle_popup') }}
