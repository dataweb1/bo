{{ help }}


<div class="popup-container">
  <!-- Button to Open the Modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal_{{ bo.id }}">
      {{ bo.field_button_caption.raw_value.value }}
  </button>
</div>

<!-- The Modal -->
<div class="modal fade" id="myModal_{{ bo.id }}">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">{{ bo.title.raw_value.value }}</h4>
                <button type="button" class="close" data-dismiss="modal">Ã—</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">

                {{ collection }}

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

{{ attach_library('bo/bo_fields_popup') }}
